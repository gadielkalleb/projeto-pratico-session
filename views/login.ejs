<% include partials/header %>

<style>
  .form-signin {
    width: 100%;
    max-width: 330px;
    padding: 15px;
    margin: auto;
  }
</style>

<div class="starter-template">
   <form class="form-signin" method="post">
      <h1 class="h3 mb-3 font-weight-normal">Por favor se indentifique</h1>
      <label for="username" class="sr-only">Nome do Usuário</label>
      <input type="text" id="username" class="form-control" placeholder="Usuário" name="username" required autofocus>
      <br>
      <label for="password" class="sr-only">Password</label>
      <input type="password" id="password" class="form-control" placeholder="Password" name="password" required>
      <br>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
      <a class="btn btn-lg btn-primary btn-block" href="/facebook">Entrar Com Facebook</a>

      <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
    </form>
</div>

